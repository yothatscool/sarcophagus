                    <div className="text-sarcophagus-400 text-sm">For Reaching Life Expectancy + Per Year Past</div>
                  </div>
                </div>

                {/* Inheritance Bonus Info */}
                <div className="bg-sarcophagus-800/80 border border-sarcophagus-700 rounded-lg p-4 mb-6">
