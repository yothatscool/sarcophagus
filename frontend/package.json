{
  "name": "vereavement-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "cypress": "cypress open",
    "cypress:headless": "cypress run",
    "test:e2e": "start-server-and-test dev http://localhost:3000 cypress",
    "test:e2e:headless": "start-server-and-test dev http://localhost:3000 cypress:headless"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@vechain/connex": "^2.1.0",
    "@vechain/connex-driver": "^2.1.0",
    "@vechain/connex-framework": "^2.1.0",
    "autoprefixer": "10.4.16",
    "next": "14.0.0",
    "postcss": "8.4.31",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-toastify": "^11.0.5",
    "tailwindcss": "3.3.5",
    "thor-devkit": "^2.0.0"
  },
  "devDependencies": {
    "@testing-library/cypress": "^10.0.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "20.8.9",
    "@types/react": "18.2.33",
    "@types/react-dom": "18.2.14",
    "cypress": "^13.6.0",
    "eslint": "8.52.0",
    "eslint-config-next": "14.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "start-server-and-test": "^2.0.3",
    "typescript": "5.2.2"
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/app/$1"
    },
    "collectCoverageFrom": [
      "app/**/*.{js,jsx,ts,tsx}",
      "!app/**/*.d.ts",
      "!app/**/_*.{js,jsx,ts,tsx}",
      "!app/**/*.stories.{js,jsx,ts,tsx}"
    ],
    "testMatch": [
      "<rootDir>/app/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/app/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ]
  }
}
