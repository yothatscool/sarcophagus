{
  "name": "sarcophagus-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "e2e": "start-server-and-test dev http://localhost:3000 cypress:run"
  },
  "keywords": [
    "sarcophagus",
    "inheritance",
    "blockchain",
    "vechain"
  ],
  "author": "Sarcophagus Protocol Team",
  "license": "MIT",
  "description": "Frontend for Sarcophagus Protocol - Digital Inheritance on VeChain",
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@rainbow-me/rainbowkit": "^1.2.5",
    "@vechain/dapp-kit-react": "^1.0.0",
    "autoprefixer": "10.4.16",
    "bufferutil": "^4.0.9",
    "clsx": "^2.0.0",
    "ethers": "^6.8.1",
    "lucide-react": "^0.294.0",
    "next": "14.0.4",
    "postcss": "8.4.31",
    "react": "^18",
    "react-dom": "^18",
    "react-toastify": "^11.0.5",
    "tailwind-merge": "^2.0.0",
    "tailwindcss": "3.3.5",
    "utf-8-validate": "^6.0.5",
    "viem": "^1.19.9",
    "wagmi": "^1.4.7"
  },
  "devDependencies": {
    "@testing-library/cypress": "^10.0.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/node": "20.8.9",
    "@types/react": "18.2.33",
    "@types/react-dom": "18.2.14",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "cypress": "^13.17.0",
    "eslint": "^8.52.0",
    "eslint-config-next": "14.0.4",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "start-server-and-test": "^2.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/app/$1"
    },
    "collectCoverageFrom": [
      "app/**/*.{js,jsx,ts,tsx}",
      "!app/**/*.d.ts",
      "!app/**/_*.{js,jsx,ts,tsx}",
      "!app/**/*.stories.{js,jsx,ts,tsx}"
    ],
    "testMatch": [
      "<rootDir>/app/**/__tests__/**/*.{js,jsx,ts,tsx}",
      "<rootDir>/app/**/*.{spec,test}.{js,jsx,ts,tsx}"
    ]
  }
}
